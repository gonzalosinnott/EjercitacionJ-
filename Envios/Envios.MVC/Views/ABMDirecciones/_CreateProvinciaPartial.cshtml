@model Envios.MVC.Models.ProvinciaModel
<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>

@{
    Layout = null;
}

@using (Html.BeginForm("CreateProvincia", "ABMDirecciones", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <br />
    <h3 class="modal-title">AGREGAR NUEVA PROVINCIA</h3>
    <hr />
    @Html.ValidationSummary(true)
    <div class="modal-body">

        <label>PAIS</label>

        @Html.DropDownListFor(Model => Model.PaisId, new SelectList(ViewBag.ListaPaises as System.Collections.IEnumerable, "PaisId", "PaisName"), "ELIJA UN PAIS", new { @class = "form-control", id = "Pais" , required = "required" })
        @Html.Hidden("PaisId")

        <br />

        <label>PROVINCIA</label>
        @Html.TextBoxFor(model => model.ProvinciaName, new { @class = "form-control", id = "Provincia", required = "required" })
        @Html.ValidationMessageFor(model => model.ProvinciaName)

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">CANCELAR</button>
        <button type="submit" class="btn btn-primary">GUARDAR</button>
    </div>
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $('#Pais').change(function () {
        $('#PaisId').val($('#Pais:selected').val());
    });

</script>
