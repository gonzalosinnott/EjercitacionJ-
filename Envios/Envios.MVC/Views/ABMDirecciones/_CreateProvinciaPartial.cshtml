@model Envios.MVC.Models.ProvinciaModel

@using (Html.BeginForm("CreateProvincia", "ABMDirecciones", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <br />
    <h3 class="modal-title text-center">AGREGAR NUEVA PROVINCIA</h3>
    <hr />
    
    @Html.ValidationSummary(true)
    
    <div class="modal-body">

        <label>PAIS</label>

        @Html.DropDownListFor(Model => Model.PaisId, new SelectList(ViewBag.ListaPaises as System.Collections.IEnumerable, "PaisId", "PaisName"), "ELIJA UN PAIS", new { @class = "form-control", id = "ProvinciaCreateSelectedPais", required = "required" })
        @Html.Hidden("PaisId")
        <br />

        <label>PROVINCIA</label>
        @Html.TextBoxFor(model => model.ProvinciaName, new { @class = "form-control", id = "Provincia", required = "required" })
        @Html.ValidationMessageFor(model => model.ProvinciaName)
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">CANCELAR</button>
        <button type="submit" class="btn btn-primary">GUARDAR</button>
    </div>
}
