@model Envios.MVC.Models.LocalidadModel
<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>



@{
    Layout = null;
}

@using (Html.BeginForm("CreateLocalidad", "ABMDirecciones", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <br />
    <h3 class="modal-title">AGREGAR NUEVA LOCALIDAD</h3>
    <hr />
    @Html.ValidationSummary(true)
<div class="modal-body">



    <label>PROVINCIA</label>

    @Html.DropDownListFor(Model => Model.ProvinciaId, new SelectList(ViewBag.ListaProvincias as System.Collections.IEnumerable, "ProvinciaId", "ProvinciaName"), "ELIJA UNA PROVINCIA", new { @class = "form-control", id = "Provincia", required = "required" })
    @Html.Hidden("ProvinciaId")
    <br />

    <label>LOCALIDAD</label>
    @Html.TextBoxFor(model => model.LocalidadName, new { @class = "form-control", id = "Localidad", required = "required" })
    @Html.ValidationMessageFor(model => model.LocalidadName)

</div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">CANCELAR</button>
        <input type="submit" value="GUARDAR" class="btn btn-info" id="saveLocalidad" />
    </div>
}


<script>
    $('#Provincia').change(function () {
        $('#ProvinciaId').val($('#Provincia:selected').val());
    });
</script>
