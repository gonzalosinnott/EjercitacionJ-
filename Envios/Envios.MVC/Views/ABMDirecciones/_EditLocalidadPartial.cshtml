@model Envios.MVC.Models.LocalidadModel

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>

@using (Html.BeginForm("EditPais", "ABMDirecciones", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <h3 class="modal-title">EDITAR LOCALIDAD</h3>
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.LocalidadId)
    <div class="modal-body">
        <label>LOCALIDAD</label>
        @Html.TextBoxFor(model => model.LocalidadName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.LocalidadName)

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>

}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>



