@model Envios.MVC.Models.PaisModel

@using (Html.BeginForm("EditPais", "ABMDirecciones", new { PaisId = @ViewBag.PaisId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <br />
    <h3 class="modal-title text-center">EDITAR PAIS</h3>
    <hr />
    
    @Html.ValidationSummary(true)
   
    <div class="modal-body">
        <label name="PaisId">PAIS ID @ViewBag.PaisId</label>
  
        @Html.TextBoxFor(model => model.PaisName, new { Value = ViewBag.PaisName, @class = "form-control" })
        @Html.ValidationMessageFor(model => model.PaisName)
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">CANCELAR</button>
        <button type="submit" class="btn btn-primary">MODIFICAR</button>
    </div>
}

